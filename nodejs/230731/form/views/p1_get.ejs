<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script
      type="text/javascript"
      src="http://code.jquery.com/jquery-1.12.4.min.js"
    ></script>

    <style>
      div {
        border: solid 1px;
        width: 250px;
        height: 40px;
        position: relative;
        line-height: 40px;
      }
    </style>
  </head>
  <body>
    <form action="/p1" method="get">
      이름 <input type="text" name="id" />
      <div>
        성별
        <span><input type="radio" name="sex" value="남성" />남성</span>
        <span><input type="radio" name="sex" value="여성" />여성</span>
      </div>

      <div>
        <select name="yy" id="year"></select
        >년
        <select name="mm" id="month"></select
        >월
        <select name="dd" id="day"></select
        >일
      </div>
      <div>
        관심사
        <span><input type="checkbox" name="interest" value="여행" />여행</span>
        <span><input type="checkbox" name="interest" value="패션" />패션</span>
        <span><input type="checkbox" name="interest" value="음식" />음식</span>
      </div>

      <button type="submit">회원가입</button>
    </form>

    <script>
      $(document).ready(function () {
        var selectedYear = 2010;
        var selectedMonth = 1;
        var selectedDay = 1;
        var now = new Date();
        var year = now.getFullYear();
        var mon =
          now.getMonth() + 1 > 9
            ? "" + (now.getMonth() + 1)
            : "0" + (now.getMonth() + 1);
        var day = now.getDate() > 9 ? "" + now.getDate() : "0" + now.getDate();
        //년도 selectbox만들기
        for (var i = 1900; i <= year; i++) {
          $("#year").append('<option value="' + i + '">' + i + "</option>");
        }

        // 월별 selectbox 만들기
        for (var i = 1; i <= 12; i++) {
          var mm = i > 9 ? i : "0" + i;
          $("#month").append('<option value="' + mm + '">' + mm + "</option>");
        }

        // 일별 selectbox 만들기
        for (var i = 1; i <= 31; i++) {
          var dd = i > 9 ? i : "0" + i;
          $("#day").append('<option value="' + dd + '">' + dd + "</option>");
        }

        $("#year  > option[value=" + selectedYear + "]").attr(
          "selected",
          "true"
        );
        $("#month  > option[value=" + selectedMonth + "]").attr(
          "selected",
          "true"
        );
        $("#day  > option[value=" + selectedDay + "]").attr("selected", "true");
      });
    </script>
  </body>
</html>
