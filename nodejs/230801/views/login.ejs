<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Document</title>
  </head>
  <body>
    <form name="info">
      <label for="id">아이디</label>
      <input type="text" id="id" name="id" />
      <br />
      <label for="pw">패스워드</label>
      <input type="password" id="pw" name="pw" />
      <br />
      <button type="button" onclick="axiosPost()">로그인</button><br />
    </form>
    <div class="result"></div>

    <script>
      async function axiosPost() {
        const form = document.forms["info"];
        const data = {
          id: form.id.value,
          pw: form.pw.value,
        };
        const result = await axios({
          method: "POST",
          url: "/axios",
          data,
        });

        const resultBox = document.querySelector(".result"); // .result 클래스의 요소 찾기

        if (result.data.success) {
          resultBox.textContent = "아이디와 비밀번호가 일치합니다.";
          resultBox.style.color = "purple";
        } else {
          resultBox.textContent = "아이디와 비밀번호가 일치하지 않습니다.";
          resultBox.style.color = "red";
        }
      }
    </script>
  </body>
</html>
